<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:id="@+id/card_player"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="100dp"
    >

        <ImageView
                android:id="@+id/img_player"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:padding="16dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toStartOf="@+id/player_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/img_chelsea"/>

        <TextView
                android:id="@+id/player_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="Messi"
                app:layout_constraintBottom_toBottomOf="@+id/img_player"
                app:layout_constraintEnd_toStartOf="@+id/player_position"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/img_player"
                app:layout_constraintTop_toTopOf="@+id/img_player"/>

        <TextView
                android:id="@+id/player_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="Forward"
                app:layout_constraintBottom_toBottomOf="@+id/img_player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/player_name"
                app:layout_constraintTop_toTopOf="@+id/img_player"
        />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>